<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDarkMode</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDarkMode</item>
        <item name="colorAccent">@color/colorPrimaryLightDarkMode</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDarkMode</item>

        <item name="android:windowBackground">@color/colorPrimaryBgDarkMode</item>
        <item name="android:colorBackground">@color/colorPrimaryBgDarkMode</item>
    </style>

    <style name="LaunchScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryLight</item>
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:navigationBarColor">@color/colorPrimaryLight</item>
    </style>
</resources>