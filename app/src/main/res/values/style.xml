<?xml version="1.0" encoding="utf-8"?>
<resources>



    <style name="TextViewLabel.SectionLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_round_white</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="SectionSubLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SectionContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_round_white</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">25dp</item>
    </style>

    <style name="TextViewLabel">
        <item name="android:lines">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text_label_gray</item>
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
    </style>

    <style name="TextViewNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:lines">1</item>
        <item name="android:text">0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TextViewLabel.GlobalDataTodayCardsLabel">
        <item name="android:textSize">19sp</item>
        <item name="android:translationZ">@dimen/elevation_medium</item>
    </style>

    <style name="TextViewNumber.TodayDataBoxContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:translationZ">@dimen/elevation_medium</item>
    </style>

    <style name="TodayDataBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:translationZ">@dimen/elevation_medium</item>
    </style>

    <style name="TodayBoxLoadingLottie">
        <item name="android:elevation">@dimen/elevation_medium</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginBottom">14dp</item>
    </style>

    <style name="GlobalDataCircle">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>


</resources>