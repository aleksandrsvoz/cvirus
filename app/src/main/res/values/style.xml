<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CLSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">@dimen/margin_country_hor</item>
        <item name="android:layout_marginEnd">@dimen/margin_country_hor</item>
    </style>

    <style name="SectionLabel" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_round_white</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SectionSubLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SectionContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_round_white</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">25dp</item>
    </style>
</resources>