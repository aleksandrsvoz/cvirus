<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/globalDataFragment">

    <fragment
        android:id="@+id/globalDataFragment"
        android:name="com.alexvoz.cvirus.presentation.covid_data.CovidGlobalDataFragment"
        android:label="Global"
        tools:layout="@layout/fragment_global_data">

        <action
            android:id="@+id/action_globalDataFragment_to_countriesListFragment"
            app:destination="@id/countriesListFragment" />
    </fragment>

    <fragment
        android:id="@+id/countriesListFragment"
        android:name="com.alexvoz.cvirus.presentation.country_list.CountryListFragment"
        android:label="Countries"
        tools:layout="@layout/fragment_countries_list">
        <action
            android:id="@+id/action_countriesListFragment_to_globalDataFragment"
            app:destination="@id/globalDataFragment" />
        <action
            android:id="@+id/action_countriesListFragment_to_countryDataFragment"
            app:argType="integer"
            app:destination="@id/countryDataFragment" />


    </fragment>

    <fragment
        android:id="@+id/countryDataFragment"
        android:name="com.alexvoz.cvirus.presentation.country_data.CountryDataFragment"
        android:label="Country"
        tools:layout="@layout/fragment_country_data">

        <action
            android:id="@+id/action_countryDataFragment_to_countriesListFragment"
            app:destination="@id/countriesListFragment" />
    </fragment>

</navigation>